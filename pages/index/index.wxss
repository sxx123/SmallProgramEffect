  display: flex;
  align-items: center;
  flex-direction: column;
}

.changList{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.list{
  display: flex;
  align-items: center;
}
image{
  width: 30rpx;
  height: 30rpx;
}
.pageA{
  width: 100%;
  height: 140rpx;
  background: red;
}
.pageB{
  width: 100%;
