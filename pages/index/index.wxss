}
swiper{
  width: 100%;
  height: 100px;

}
.swiper-tab{
    width: 100%;
    /* border-bottom: 2rpx solid #ccc; */
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    background-color: rgb(157, 182, 19);
    color: white;
}
.swiper-tab-item{
    width: 22%; 
    color:#000000;
    margin-left: 65rpx;
    font-size: 32rpx;
    color: white;
}
 .active{
    /* color:#d70615; */
    border-bottom: 1rpx solid white;
    margin-bottom: 8rpx;
}

.sxList {
  display: flex;
  flex-wrap: wrap;
  flex: 1;
  margin: 0 0 0 30rpx;
}

.sxList .sxListdefault, .sxList .sxListColor {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 220rpx;
  height: 56rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #2b2b2b;
  background: #f7f7f7;
  border-radius: 2px;
  margin-right: 12rpx;
  margin-bottom: 20rpx;
}

.sxList .sxListColor {
  color: #ff5c4d !important;
  background: #fff0f0 !important;
  border-radius: 2px !important;
  border: none;
}

.sxListTwo text {
  margin-bottom: 20rpx;
}


/* 轮播图 */

.banner {
  width: 100%;
  height: auto;
  position: relative;
}


.slide-image {
  width: 100%;
  height: 100%;
}


/* 显示数量 */

.xNumber {
  width: 92rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.20);
  position: absolute;
  bottom: 20rpx;
  right: 32rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.xNumber text {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 28rpx;
}
